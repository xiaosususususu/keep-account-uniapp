<view class="container"><view wx:if="{{a}}" class="empty-tip"><text>请先添加玩家</text><button class="go-to-players" type="primary" bindtap="{{b}}">去添加</button></view><view wx:else class="record-form"><view class="form-header"><text class="title">记录本局得分</text><text class="current-date">{{c}}</text></view><view class="players-input"><view wx:for="{{d}}" wx:for-item="player" wx:key="h" class="player-score-input"><view class="player-header"><text class="player-name">{{player.a}}</text><text class="current-score">当前总分: {{player.b}}</text></view><view class="input-wrapper"><button class="score-btn minus" bindtap="{{player.c}}">-10</button><input class="score-input" type="number" placeholder="输入得分" bindblur="{{player.d}}" value="{{player.e}}" bindinput="{{player.f}}"/><button class="score-btn plus" bindtap="{{player.g}}">+10</button></view></view></view><view class="form-actions"><button class="reset-btn" bindtap="{{e}}">重置</button><button class="save-btn" type="primary" bindtap="{{f}}">保存</button></view></view></view>