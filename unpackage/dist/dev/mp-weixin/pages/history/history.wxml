<view class="container"><view wx:if="{{a}}" class="empty-tip"><text>暂无游戏记录</text><button class="go-to-record" type="primary" bindtap="{{b}}">开始记账</button></view><view wx:else class="history-list"><view wx:for="{{c}}" wx:for-item="game" wx:key="d" class="game-record"><view class="game-header"><text class="game-date">{{game.a}}</text><text class="game-round">第 {{game.b}} 局</text></view><view class="players-scores"><view wx:for="{{game.c}}" wx:for-item="player" wx:key="g" class="player-score"><text class="player-name">{{player.a}}</text><view class="scores"><text class="{{['round-score', player.d && 'positive', player.e && 'negative']}}">{{player.b}}{{player.c}}</text><text class="total-score">={{player.f}}</text></view></view></view></view></view><view wx:if="{{d}}" class="history-actions"><button class="clear-history-btn" type="warn" bindtap="{{e}}">清空历史记录</button></view></view>